<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>       
  <session-factory>
    <!-- Database connection settings -->
    <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
    <property name="show_sql">true</property>
     
    <mapping class="com.quocbn.model.Homestay" />
    <mapping class="com.quocbn.model.HomestayType" />
    <mapping class="com.quocbn.model.Account" />
    <mapping class="com.quocbn.model.Room" />
    <mapping class="com.quocbn.model.RoomType" />
    <mapping class="com.quocbn.model.Role" />
    <mapping class="com.quocbn.model.Booking" />
    <mapping class="com.quocbn.model.Comment" />
    <mapping class="com.quocbn.model.HomestayImage" />
  </session-factory>
</hibernate-configuration>